#top-menu table td img.right {
	margin:-7px 0 0 8px;
}
*+html table#center {
	zoom:1;
}
*+html #top-menu TABLE TD:hover UL {
	overflow:visible;
}
*+html #top-menu table td ul {
	left:0;
	top:0;
	position:relative;
}
*+html #top-menu table td div ul li {
	margin-left:10px;
}
*+html div.hover {
	position:absolute;
	left:0;
	top:24px;
	zoom:1;
	z-index:200000;
}
*+html #i_hate_ie {
	zoom:1;
}
*+html div.hr {
	display:none;
}
*+html #top-menu table td ul li.hr {
	height:auto;
	list-style-type:none;
}
*+html #top-menu table td ul li.hr hr {
	visibility:hidden;
}